<h2>Listing tweets</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User ID</th> 
      <th>Tweet</th>
      <th>Num comments</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user_id %></td>
        <td><%= tweet.tweets %></td>
        <td><%= tweet.num_comments %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Tweet', new_tweet_path, :class => "btn btn-default" %>

